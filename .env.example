# Application Configuration
APP_ENV=development
APP_HOST=localhost
APP_PORT=8080
APP_DEBUG=true

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRATION=24h

# Database Configuration
# Database driver: sqlite, postgres, mongo
DB_DRIVER=sqlite
# Table prefix for all database tables
DB_TABLE_PREFIX=fx_

# SQLite Configuration (default)
SQLITE_PATH=./data/app.db

# PostgreSQL Configuration
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_USER=postgres
POSTGRES_PASSWORD=password
POSTGRES_DATABASE=fx_gin_scaffold
POSTGRES_SSLMODE=disable
POSTGRES_TIMEZONE=UTC

# MongoDB Configuration
MONGO_URI=mongodb://localhost:27017
MONGO_DATABASE=fx_gin_scaffold

# Logger Configuration
LOG_LEVEL=info
LOG_FORMAT=json
LOG_OUTPUT=stdout

# Server Configuration
ENABLE_SWAGGER=true
ENABLE_CORS=true
CORS_ORIGINS=*
CORS_METHODS=GET,POST,PUT,DELETE,OPTIONS
CORS_HEADERS=Origin,Content-Type,Accept,Authorization,X-Requested-With